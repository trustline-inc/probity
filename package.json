{
  "name": "@trustline-inc/probity",
  "version": "1.0.0-alpha5",
  "license": "MIT",
  "description": "Probity smart contracts",
  "scripts": {
    "node": "npx hardhat node",
    "build": "npm run clean && npm run solhint && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "lint": "npm run prettier:solidity && npm run solhint",
    "solhint": "./node_modules/.bin/solhint contracts/**/*.sol contracts/**/**/*.sol",
    "solhint:fix": "./node_modules/.bin/solhint --fix contracts/**/*.sol contracts/**/**/*.sol",
    "prettier:solidity": "./node_modules/.bin/prettier --write contracts",
    "initProbity:local": "npx hardhat --network local run ./scripts/initProbity.ts",
    "initProbity:coston": "TOKEN=CFLR npx hardhat --network coston run ./scripts/initProbity.ts",
    "initProbity:internal": "TOKEN=FLR npx hardhat --network internal run ./scripts/initProbity.ts",
    "createInitialTx:local": "npx hardhat --network local run ./scripts/createInitialTx.ts",
    "rateUpdater:local": "npx hardhat --network local run ./scripts/rateUpdater.ts",
    "rateUpdater:internal": "npx hardhat --network internal run ./scripts/rateUpdater.ts",
    "rateUpdater:coston": "npx hardhat --network coston run ./scripts/rateUpdater.ts",
    "priceUpdater:local": "npx hardhat --network local run ./scripts/priceUpdater.ts",
    "priceUpdater:internal": "npx hardhat --network internal run ./scripts/priceUpdater.ts",
    "priceUpdater:coston": "npx hardhat --network coston run ./scripts/priceUpdater.ts",
    "whitelistAddress": "npx hardhat --network local run ./scripts/whitelistAddress.ts",
    "demo:issue": "npx hardhat --network local run ./scripts/issueAurei.ts",
    "demo:redeem": "npx hardhat --network local run ./scripts/redeemAurei.ts",
    "script:markComplete": "npx hardhat --network local run ./scripts/markTransferComplete.ts",
    "deployAuction:local": "npx hardhat --network local run ./scripts/deployAuction.ts",
    "deployERC20Token:local": "npx hardhat --network local run ./scripts/deployERC20Token.ts",
    "deployVpToken:local": "npx hardhat --network local run ./scripts/deployVpToken.ts",
    "deploy:local": "npx hardhat --network local run ./scripts/deploy.ts",
    "deploy:internal": "STABLECOIN=AUR NATIVE_TOKEN_COSTON=FLR npx hardhat --network internal run ./scripts/deploy.ts",
    "deploy:coston": "DEPLOYMENT_DELAY=20000 STABLECOIN=AUR NATIVE_TOKEN_COSTON=CFLR npx hardhat --network coston run ./scripts/deploy.ts",
    "deploy:hardhat": "npx hardhat --network localhost run ./scripts/deploy.ts",
    "test": "NODE_ENV=test npx hardhat test --network hardhat",
    "test:happy": "NODE_ENV=test npx hardhat test test/happyFlow.test.ts --network hardhat",
    "coverage": "npm run build && npx hardhat coverage --temp artifacts --network hardhat --solcoverjs ./.solcover.js"
  },
  "contributors": [
    {
      "name": "Matthew Rosendin",
      "email": "matt@trustline.co"
    },
    {
      "name": "Shine Lee",
      "email": "shine@trustline.co"
    }
  ],
  "files": [
    "artifacts"
  ],
  "repository": {
    "url": "https://github.com/trustline-inc/probity.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@typechain/ethers-v5": "^8.0.0",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.41",
    "axios": "^0.24.0",
    "bignumber.js": "^9.0.1",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "decimal.js": "^10.2.1",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.31",
    "hardhat": "^2.4.3",
    "husky": "^4.3.8",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.5",
    "pretty-quick": "^3.1.0",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^6.0.0",
    "typescript": "^4.1.5",
    "web3": "^1.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
