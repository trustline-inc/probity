{
  "name": "@trustline/aurei",
  "version": "0.2.5",
  "license": "MIT",
  "description": "Aurei crypto stablecoin",
  "scripts": {
    "node": "npx hardhat node",
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "fund:local": "npx hardhat --network localhost run ./scripts/fund.ts",
    "deploy:local": "npx hardhat --network localhost run ./scripts/deploy.ts",
    "deploy:coston": "npx hardhat --network coston run ./scripts/deploy.ts",
    "test": "npx hardhat test --network hardhat",
    "coverage": "npm run build && npx hardhat coverage --temp artifacts --network coverage"
  },
  "author": "Matthew Rosendin <matt@trustline.co>",
  "files": [
    "artifacts"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@typechain/ethers-v5": "^2.0.0",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "bignumber.js": "^9.0.1",
    "chai": "^4.3.0",
    "dotenv": "^8.2.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.31",
    "hardhat": "^2.0.10",
    "hardhat-typechain": "^0.3.5",
    "husky": "^4.3.8",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.5",
    "pretty-quick": "^3.1.0",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^3.0.0",
    "typescript": "^4.1.5",
    "web3": "^1.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
